@font-face
{
	font-family:'Winston';
	src:url(Winston-Light.ttf);
}
input, body, button
{
	font-size:14px;
	color:#fff;
	font-family:'Winston';
}

body
{
	background:radial-gradient(circle farthest-side at 30% 10%, rgba(233,150,13,1) 4%, rgba(221,38,29,1) 44%, rgba(161,48,128,1) 98%);
	padding: 0;
	margin: 0;
	
    display: flex;
    flex-direction: column;
    align-items: center;
    flex-wrap: nowrap;
	overflow-x: hidden;
}
input
{
	background:#000a;
	outline:none;
	border:0;
}
input::placeholder
{
	color:#999;
}
button
{
	background:#0004;
	border-radius: 5px;
	border: 0;
}
button:hover
{
	background:#0008;
	cursor: pointer;
}
button:active
{
	background:#000a;
}
.message, .head, .chat, .users
{
	background:#000a;
	border-radius:10px;
	box-shadow: 0px 5px 15px 0px rgba(0, 0, 0, 0.75);
	padding: 5px;
}
.info
{
	width: 100%;
	color: #555;
	font-size: 12px;
	text-align: center;
	margin: 5px;
	margin-bottom: 10px;
}
.head
{
	margin-top: 15px;
	width: calc( 100vw - 30px );
	min-height: 40px;
	height: auto;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-evenly;
	align-items: center;
	
}
.head input, .head button, .sender button, .sender input
{
	width: 120px;
	height: 24px;
	margin: 5px;
}


.body
{
	padding-top: 30px;
	padding-bottom: 15px;
    width: 850px;
    max-width: 100vw;
    height: calc( 100vh - 60px - 50px );
    display: flex;
    justify-content: center;
    overflow-y: auto;
}
.chat
{
	padding: 0px;
	height: 100%;
	min-width: 620px;
	max-width: 620px;
}
.users
{
	margin-left: 30px;
	max-height: 100%;
	min-width: 150px;
	overflow-y: auto;
	overflow-x: hidden;
}
.users div
{
	margin: 5px;
	overflow-x: hidden;
}
.messages
{
	padding: 5px;
	padding-bottom: 0px;
	width: calc( 100% - 10px );
	height: calc( 100% - 65px );
	overflow-y:auto;
}
.sender
{
	border-top: solid  2px #444;
	height: 48px;
	padding: 5px;
	width: calc( 100% - 10px );
	display: flex;
    align-items: center;
}
.sender input
{
	width: calc( 100% - 150px );
}
.message
{
	margin: 5px;
	margin-bottom: 10px;
	width: fit-content;
}
.message div
{
	margin: 5px;

}
.name
{
	font-size: 13px;
}
.message hr
{
	height: 1px;
	border: none;
	background: #555;
}

::-webkit-scrollbar
{
	width: 6px;
	height: 6px;
}
::-webkit-scrollbar-track
{
	background: #3337;
}
::-webkit-scrollbar-thumb
{
	background: #6669;
	border-radius: 3px;
}